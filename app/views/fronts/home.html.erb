<script>
  $(function() {

      $('.row1').matchHeight();
      $('.navheight').matchHeight()

  });

  var block1 = $('#block1').waypoint({
    handler: function(direction) {
      $(".profilepreviewbg").css({ 
        backgroundPosition: "142% 150%"
      });
    },
    offset: '40%'
  });

  var block2 = $('#block2').waypoint({
    handler: function(direction) {
      $(".clock").css({ 
        top: "10%",
        border: "10px solid #77B63F"
      });
      $(".eb3-grab").css({ 
        top: "-20%",
        opacity: "1"
      });
    },
    offset: '40%'
  });

  var block3 = $('#block3').waypoint({
    handler: function(direction) {
      $(".writer").typed({
        strings: ["Christmas Dinner next week", "50% off tomorrow!", "Local band playing this weekend"],
        typeSpeed: 70,
        startDelay: 2500
      });
    },
    offset: '85%'
  });

  $(function() {
    $('.tipso').tipso();
    jQuery('#tool-1').tipso({
      position: 'right',
      speed           : 200,
      background      : 'rgb(250, 250, 250)',
      color           : '#181818',
      width           : "20rem",
      offsetX         : 10,
      tooltipHover    : false,
      content         : null,
      ajaxContentUrl  : null,
      useTitle        : false,
      onBeforeShow    : null,
      onShow          : null,
      onHide          : null
    });
  });

  var block4 = $('#block4').waypoint({
    handler: function(direction) {
      $('.customise-vid').get(0).play()
    },
    offset: '20%'
  });

</script>
