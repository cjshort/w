<div class="navheight"></div>


<div class="row mainbg nopadding">
  <div class="row padding7v mainbgoverlay">
    <div class="large-1 columns">
      <br>
    </div>
    <div class="large-4 columns whitebg content padding2v row1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h4 class="margin2b">Login to mission control</h4>
      <div class="row nopadding padding1b">
        <div class="large-2 columns bluebg fieldmatch">
        </div>
        <div class="large-10 columns fieldmatch">
          <div class="field">
            <%= f.email_field :email, autofocus: true, class: "margin0bimportant" %>
          </div>
        </div>
      </div>

      <div class="row nopadding padding1b">
        <div class="large-2 columns bluebg fieldmatch">
        </div>
        <div class="large-10 columns fieldmatch">
          <div class="field">
            <%= f.password_field :password, autocomplete: "off", class: "margin0bimportant" %>
          </div>
        </div>
      </div>

      <div class="row nopadding">
        <div class="large-6 columns text-left">
          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "rememberlabel" %>
            </div>
          <% end %>
        </div>
        <div class="large-6 columns text-right">
          <div class="actions">
            <%= f.submit "Log in", class: "loginbutton" %>
          </div>
          <% end %>
        </div>
      </div>

    </div>
    <div class="large-6 columns whitebg opacity02 row1">
      <br><br><br><br><br>
    </div>
    <div class="large-1 columns">
      <br>
    </div>
  </div>
</div>

<script>
  $('.row1').matchHeight();
  $('.fieldmatch').matchHeight();
</script>