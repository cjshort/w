<!DOCTYPE html>
<html>
<head>
  <title>BeamWiFi | Hotspot Marketing for small business</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>
</head>
<body>

<div class="deepgradient">
<div class="row nopadding height100vh">
  <div class="large-7 columns">
    <br>
  </div>
  <div class="large-10 columns">
    <div class="row padding3t padding2h">
      <h1 class="margin2b font5 weight900 white"><%= image_tag('logo.png', class: "loginlogo") %>Hi.</h1>
      <div class="large-24 columns content2 padding3v logincontainer">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row nopadding loginfield1 auto">
          <div class="large-4 columns fieldmatch loginicons text-center">
            <%= image_tag 'email-icon.png' %>
          </div>
          <div class="large-20 columns fieldmatch">
            <div class="field">
              <%= f.email_field :email, autofocus: true, class: "margin0bimportant login", id: "focus1", :placeholder => "Enter your email", onfocus: "this.placeholder = ''", onblur: "this.placeholder = 'Enter your email'" %>
            </div>
          </div>
        </div>

        <div class="spacer1"></div>

        <div class="row nopadding loginfield2">
          <div class="large-4 columns fieldmatch loginicons text-center">
            <%= image_tag 'password-icon.png' %>
          </div>
          <div class="large-20 columns fieldmatch">
            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: "margin0bimportant login", id: "focus2", :placeholder => "Enter your password", onfocus: "this.placeholder = ''", onblur: "this.placeholder = 'Enter your password'" %>
            </div>
          </div>
        </div>

        <div class="spacer1"></div>

        <div class="row nopadding">
          <div class="large-12 columns text-left">
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "rememberlabel" %>
              </div>
            <% end %>
          </div>
          <div class="large-12 columns text-right">
            <div class="actions">
            <%= content_tag :button, type: 'submit', class: "loginbutton butt" do %>
              PROCEED
            <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <h4 class="text-center white weight100">Haven't got BeamWiFi yet?</h4>
      <%= link_to new_user_registration_path do %><h5 class="text-center white logingetit butt">GET IT</h5><% end %>
    </div>
  </div>
  <div class="large-7 columns">
    <br>
  </div>
</div>
</div>

<script>
  $('.fieldmatch').matchHeight();

  $("#focus1").focus(function() {
      $(".loginfield1").css({
        border: "1px solid rgba(58, 44, 47, 0.5)"
      });
  });

  $("#focus1").focusout(function() {
    $(".loginfield1").css({
      border: "1px solid rgba(58, 44, 47, 0.14)"
    });
  });

  $("#focus2").focus(function() {
      $(".loginfield2").css({
        border: "1px solid rgba(58, 44, 47, 0.5)"
      });
  });

  $("#focus2").focusout(function() {
    $(".loginfield2").css({
      border: "1px solid rgba(58, 44, 47, 0.14)"
    });
  });

  Waves.attach('.butt');
  Waves.init();

</script>