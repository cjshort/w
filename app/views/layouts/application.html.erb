<!DOCTYPE html>
<html>
<head>
  <title>BeamWIFI | Hotspot marketing for small business</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:600,400' rel='stylesheet' type='text/css'>
</head>
<body class="<%= action_name %>">

  <div class="fixed contain-to-grid">
    <header>
      <div class="top-bar-background">
      <nav class="top-bar navheight" data-topbar role="navigation">
            <ul class="title-area">
              <li class="name">
                <h1><%= link_to root_path do %><%= image_tag('logo.png') %><% end %></h1>
              </li>
               <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
              <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
            </ul>

        <section class="top-bar-section">
          <!-- Right Nav Section -->
          <ul class="left">
            <li><%= link_to fronts_howitworks_path do %>HOW IT WORKS<% end %></li>
            <li class="has-dropdown">
              <a href="#">INDUSTRIES</a>
              <ul class="dropdown">
                <li><a href="#">CAFES &amp; COFFEE SHOPS</a></li>
                <li><a href="#">RESTAURANTS &amp; BARS</a></li>
                <li><a href="#">NIGHTCLUBS &amp; PUBS</a></li>
              </ul>
            </li>
            <li><%= link_to fronts_pricing_path do %>PRICING<% end %></li>
          </ul>

          <ul class="right">
            <li><%= link_to new_user_session_path do %><span class="mainlogin">LOGIN</span><% end %></li>
            <li><%= link_to new_user_session_path do %><span class="maingetwyfi">GET BEAM</span><% end %></li>
          </ul>
        </section>
      </nav>
      </div>
    </header>
  </div>


<%= yield %>

<div class="footerbg">
  <div class="row text-center padding2v">
    <%= image_tag('logo.png', class: "height3") %>
  </div>
</div>


<script type="text/javascript">
  $("header").headroom({
    "offset": 150,
  });
</script>

<script>
  $(document).foundation();
</script>

<script>
  $('.navheight').matchHeight();
</script>


</body>
</html>
