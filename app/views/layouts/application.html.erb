<!DOCTYPE html>
<html>
<head>
  <title>BeamWiFi | Hotspot marketing for small business</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href='https://fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,600,400' rel='stylesheet' type='text/css'>
</head>
<body class="<%= action_name %>">

  <div class="fixed contain-to-grid">
    <header>
      <div class="top-bar-background">
      <nav class="top-bar" data-topbar role="navigation">
            <ul class="title-area">
              <li class="name">
                <h1><%= link_to root_path do %><%= image_tag('logo.png') %><% end %></h1>
              </li>
               <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
              <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
            </ul>

        <section class="top-bar-section">
          <!-- Right Nav Section -->
          <ul class="left">
            <li><%= link_to(fronts_howitworks_path, class: "pointer") do %><span>MISSION CONTROL</span><% end %></li>
            <li class="has-dropdown">
              <a href="#" class="pointer"><span>STORIES</span></a>
              <ul class="dropdown">
                <li><%= link_to fronts_caferestaurant_path do %>CAFÃ‰S &amp; RESTAURANTS<% end %></li>
                <li><%= link_to fronts_nightclubbar_path do %><span class="weight600">MIKE BENNET</span> - CAKESMITHS<% end %></li>
              </ul>
            </li>
            <li><%= link_to(fronts_pricing_path, class: "pointer") do %><span>PRICING</span><% end %></li>
          </ul>

          <ul class="right">
            <li>
              <%= link_to(new_user_session_path, class: "buttnav") do %>
                <div class="mainlogin butt">LOGIN</div>
              <% end %>
            </li>
            <li>
              <%= link_to(new_user_registration_path, class: "buttnav") do %>
                <div class="maingetbeam butt">GET BEAM</div>
              <% end %>
            </li>
          </ul>
        </section>
      </nav>
      </div>
    </header>
  </div>


<%= yield %>

<div class="footerbg">
  <div class="row text-center padding2v">
    <%= image_tag('logo.png', class: "height3") %>
  </div>
</div>


<script type="text/javascript">
  $("header").headroom({
    "offset": 70,
  });

  Waves.attach('.butt');
  Waves.init();

  $(document).foundation();
</script>

</body>
</html>
